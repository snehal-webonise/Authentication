<h1>Log in</h1>

<%= form_tag sessions_path , :html => { :class => 'form-horizontal' } do %>
    <div class="control-group">
      <%= label_tag :email %>
      <div class="controls">
      <%= text_field_tag :email, params[:email] %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :password %>
      <div class="controls">
      <%= password_field_tag :password %>
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag "Log in" ,:class => 'btn btn-primary'%>
        </div>
<% end %>

