        </div>
      </div>
    </div>

    <div id="user_nav" >
      <% if current_user %>

         <h3>Welcome to <%= current_user.email %></h3>.
         <h3><%= link_to "Log out", log_out_path %> </h3>
      <% else %>
          <h3><%= link_to "Sign up", sign_up_path %> or
          <%= link_to "log in", log_in_path %>  </h3>

      <% end %>
    </div>


    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>



